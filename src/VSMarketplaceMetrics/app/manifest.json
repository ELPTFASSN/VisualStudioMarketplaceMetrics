{
  "manifest_version":2,
  "name": "Visual Studio Marketplace Metrics",
  "short_name": "VS Extensions Metrics",
  "version": "1.0",
  "description": "See the total install count and other metrics for all your Visual Studio Marketplace extensions with just one click.",
  "default_locale": "en",
  "author": "Greg Trevellick",
  "homepage_url": "https://gregtrevellick.github.io/VisualStudioMarketplaceMetrics/",
  
  "page_action" :
  {
    "default_icon" : "img/icon_19x19.png",
    "default_title" : "Visual Studio Marketplace Metrics",
    "default_popup": "popup.html"
  },

  "background": 
  {
    "scripts": [ "scripts/background.js" ],
    "persistent": false
  },

  "content_scripts": 
  [
    {
      "matches": [ "http://marketplace.visualstudio.com/*", "https://marketplace.visualstudio.com/*" ],
      "js": [ "scripts/jquery-3.1.1.slim.min.js", "scripts/console.image.min.js", "scripts/contentscript.js" ]
    }
  ],

  "permissions": [
    "activeTab",
    "declarativeContent",
    "http://marketplace.visualstudio.com/",
    "https://marketplace.visualstudio.com/"
  ],

  "icons": 
    {
      "48": "img/icon_48x48.png",
      "128": "img/icon_128x128.png" 
    },

  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com 'unsafe-eval'; object-src 'self'"

}
