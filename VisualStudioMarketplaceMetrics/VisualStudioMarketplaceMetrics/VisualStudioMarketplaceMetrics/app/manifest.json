{
  "manifest_version":2,
  "name": "Visual Studio Marketplace Metrics",
  "version": "1.0",
  "description": "See the total install count & other metrics for all your Visual Studio Marketplace extensions (VS IDE + VSTS + VS Code) with just 1 click.",

  "page_action" :
  {
    "default_icon" : "img/icon_purple.png",
    "default_title" : "Visual Studio Marketplace Metrics",
    "default_popup": "popup.html"
  },

  "background": 
  {
    "scripts": 
    [
      "scripts/background.js"
    ],
    "persistent": false
  },

  "content_scripts": 
  [
    {
      "matches": 
      [        
        "https://marketplace.visualstudio.com/*"
      ],
      "js": 
      [
        "scripts/contentscript.js",
        "scripts/jquery-latest.js"
      ]
    }
  ],

  "permissions": [
    "declarativeContent",
    "https://marketplace.visualstudio.com/*",
    "activeTab"
  ],

  "icons": {
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"

}
