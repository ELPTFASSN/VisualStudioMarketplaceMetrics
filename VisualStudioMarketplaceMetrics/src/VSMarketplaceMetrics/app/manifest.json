{
  "manifest_version":2,
  "name": "Visual Studio Marketplace Metrics",
  "version": "1.0",
  "description": "See the total install count & other metrics for all your Visual Studio Marketplace extensions (VS IDE + VSTS + VS Code) with just 1 click.",

  "page_action" :
  {
    "default_icon" : "img/icon_19x19.png",
    "default_title" : "Visual Studio Marketplace Metrics",
    "default_popup": "popup.html"
  },

  "background": 
  {
    "scripts": 
    [
      "scripts/background.js"
    ],
    "persistent": false
  },

  "content_scripts": 
  [
    {
      "matches": 
      [        
        "https://marketplace.visualstudio.com/*"
      ],
      "js": 
      [
        "scripts/contentscript.js",
        "scripts/jquery-1.10.2.js"
      ]
    }
  ],

  "permissions": [
    "activeTab",
    "declarativeContent",
    "http://marketplace.visualstudio.com/",
    "https://marketplace.visualstudio.com/",
    "http://marketplace.visualstudio.com/search*",
    "https://marketplace.visualstudio.com/search*",
    "http://marketplace.visualstudio.com/manage*",
    "https://marketplace.visualstudio.com/manage*",
    "http://marketplace.visualstudio.com/vs*",
    "https://marketplace.visualstudio.com/vs*",
    "http://marketplace.visualstudio.com/vsts*",
    "https://marketplace.visualstudio.com/vsts*",
    "http://marketplace.visualstudio.com/vscode*",
    "https://marketplace.visualstudio.com/vscode*",
    "https://social.msdn.microsoft.com/profile/*",
    "http://www.bbc.co.uk/*"
  ],

  "icons": {
    "48": "img/icon_48x48.png",
    "128": "img/icon_128x128.png"
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"

}
