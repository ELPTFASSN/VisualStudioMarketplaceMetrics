{
  "manifest_version":2,
  "name": "gregt Page action by URL",
  "version": "1.0",
  "description": "gregt desc.",
 

  "page_action" :
  {
    "default_icon" : "img/icon_purple.png",
    "default_title" : "gregt manifest default_title ",
    "default_popup": "popup.html"
  },

  "background": 
  {
    "scripts": 
    [
    	"scripts/eventPage.js"
    ],
    "persistent": false
  },

  "content_scripts": 
  [
    {
      "matches": 
      [        
        "https://marketplace.visualstudio.com/*"
      ],
      "js": 
      [
        "scripts/vsmarketplace_dom_contentscript.js",
        "scripts/jquery-1.10.2.js"
      ]
    }
  ],

  "permissions": [
    "declarativeContent",
    "https://marketplace.visualstudio.com/*",
    //"tabs"
    "activeTab"
    //"storage",
    //"notifications"
  ],



  "icons" : {
    "48" : "img/icon-48.png",
    "128" : "img/icon-128.png"
  }

}
