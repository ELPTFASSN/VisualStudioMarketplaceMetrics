{
  "manifest_version":2,
  "name": "gregt Page action by URL",
  "version": "1.0",
  "description": "gregt Shows a page action for urls which have the letter 'g' in them.",
 

  "page_action" :
  {
    "default_icon" : "img/icon-19.png",
    "default_title" : "gregt manifest default_title There's a 'G' in this URL!",
    "default_popup": "popup.html"
  },

  "background": 
  {
    "scripts": 
    [
    	"scripts/eventPage.js"
    ],
    "persistent": false
  },

  "content_scripts": 
  [
    {
      "matches": 
      [
        "http://localhost/*",
        "http://www.bbc.co.uk/*",
        "https://marketplace.visualstudio.com/*"
      ],
      "js": 
      [
        "scripts/spur_dom.js",
        "scripts/jquery-1.10.2.js"
      ]
    }
  ],
  
  "permissions" : [
    "declarativeContent",
    "http://localhost/*",
    "http://www.bbc.co.uk/*",
    "https://marketplace.visualstudio.com/*",
    "tabs",
    "storage",
    "notifications"
  ],



  "icons" : {
    "48" : "img/icon-48.png",
    "128" : "img/icon-128.png"
  }

}
